<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="shortcut icon" type="image/x-icon" href="{{ asset('icons/favicon.ico') }}"/>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
    <title>Merci pour votre commande</title>
    <style>
      body {
        font-family: 'Poppins', sans-serif;
      }
      .container {
        margin: 50px auto 0 auto;
        width: 50vw;
      }
      p {
        margin: 0;
      }
      .section {
        margin: 50px 0;
        border: solid 1px #000;
      }
      .section-title {
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #0275d8;
        color: white;
        height: 2.5rem;
        margin: 0;
      }
      .section-body {
        margin: 30px 0;
        padding: 0 10vw 0 10vw;
      }
      @media screen and (max-width:700px) {
        .container {
          width: 90vw;
        }
      }
    </style>
</head>
<body class="container">
  <section>
    <p style="text-align: center;">Bonjour,</p>
    <p style="text-align: center;">Merci pour votre commande</p>
    <p style="text-align: center;">Commande n° {{ order.reference }}</p>
  </section>

  <section class="section">
    <h4 class="section-title">Détails de la commande</h4>
    <div class="section-body">
    {% for atelier in order.ateliers %}
      <div>
        <p>
          {{ atelier.title }} - 
          {{ atelier.price|format_currency('EUR') }}
        <p>Le {{ atelier.date|format_datetime(locale='fr',pattern="EEEE dd MMMM YYYY à HH:mm") }}</p>
      </div>
    {% endfor %}
    </div>
  </section>

  <section class="section">
    <h4 class="section-title">Résumé de la commande</h4>
    <div class="section-body">
      <p>N° de la commande : {{ order.reference }}</p>
      <p>Date de la commande : {{ order.createdAt|format_datetime(locale='fr',pattern="EEEE dd MMMM YYYY à HH:mm") }}</p>
      <p>Prix total : {{ total|format_currency('EUR') }}</p>
    </div>
  </section>
</body>
</html>