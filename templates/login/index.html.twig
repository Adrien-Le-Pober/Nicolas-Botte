{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="min-vh-100"></div>
{% if error %}
<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<main class="container d-flex flex-column align-items-center" id="login">
    <h1 class="mt-5">Formulaire de connexion</h1>
    <fieldset class="border border-primary border-rounded my-5 shadow col-12 col-md-8 col-lg-6 col-xl-4">
        <form action="{{ path('login') }}" method="post" class="d-flex flex-column my-3 p-3">
            <div class="d-flex flex-column form-group">
                <label for="username">Email</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control rounded-pill"/>
            </div>
            <div class="d-flex flex-column form-group">
                <label for="password">Mot de passe</label>
                <input type="password" id="password" name="_password" class="form-control rounded-pill"/>
            </div>
            <a href="{{ path("app_register", {'_fragment': 'register'}) }}" class="align-self-end text-small">Pas encore inscrit?</a>

            {# If you want to control the URL the user is redirected to on success
            <input type="hidden" name="_target_path" value="/account"/> #}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button type="submit" class="btn btn-primary rounded-pill mt-3">Valider</button>
        </form>
    </fieldset>
</main>
{% endblock %}
