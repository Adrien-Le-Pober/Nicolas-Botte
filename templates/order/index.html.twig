{% extends 'base.html.twig' %}

{% block title %}Mes commandes{% endblock %}

{% block body %}
    <div class="min-vh-100"></div>
    <main class="container my-3" id="orders">
        <section class="d-flex flex-column align-items-center">
            <h2>Mes commandes</h2>
            {% for order in orders %}
                <div class="card col-11 col-md-6 my-3 shadow">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Commande n°{{ order.reference }}</h5>
                        <p class="card-text">
                            Le {{ order.createdAt|format_datetime(locale='fr',pattern="EEEE dd MMMM YYYY à HH:mm") }}<br>
                            Prix total : {{ order.price|format_currency('EUR') }}
                        </p>
                        <a class="btn btn-outline-primary rounded-pill my-1" href="{{ path('app_order_show', {id:order.id, '_fragment': 'order-show'}) }}">Voir les détails de la commande</a>
{#                         <a class="btn btn-outline-primary rounded-pill my-1" href="{{ path('app_bill', {id:order.id}) }}">Voir la facture</a> #}
                    </div>
                </div>
            {% else %}
                <p>Vous n'avez encore passé aucune commande.</p>
            {% endfor %}
        </section>
    </main>
{% endblock %}
