{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="min-vh-100"></div>
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <main class="container d-flex flex-column align-items-center" id="register">
        <h1 class="mt-5">Formulaire d'inscription</h1>
        <fieldset class="border border-primary border-rounded my-5 shadow">
            {{ form_start(registrationForm, {
                'attr': {class:"d-flex flex-column my-3 p-3"}
            }) }}
                {{ form_row(registrationForm.email, {
                    'attr': {class:"d-flex flex-column rounded-pill"}
                }) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe',
                    'attr': {class:"d-flex flex-column rounded-pill"}
                }) }}
                {{ form_row(registrationForm.agreeTerms, {
                    label: "J'accepte que mes données soient conservées.",
                    'attr': {class:"d-flex flex-column"}
                }) }}

                <button type="submit" class="btn btn-primary rounded-pill">Valider</button>
            {{ form_end(registrationForm) }}
        <fieldset>
    </main>

{% endblock %}
